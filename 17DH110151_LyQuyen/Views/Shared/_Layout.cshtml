<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @*<link href="~/Content/Slideshow.css" rel="stylesheet" />*@
</head>
<body>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/Images/1.jpg" alt="First slide" style="height:300px;width:300px">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/2.jpg" alt="Second slide" style="height:300px;width:300px">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/3.jpg" alt="Third slide" style="height:300px;width:300px">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Saches/List">Nhà Sách</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Cart/Index">Giỏ Hàng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/KhachHangs/Create">Đăng ký khách hàng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/KhachHangs/Login">Đăng nhập</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                Tác Giả
                            </a>
                            <div class="dropdown-menu">
                                @Html.Action("Menu", "TacGias")
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                Thể Loại
                            </a>
                            <div class="dropdown-menu">
                                @Html.Action("Menu", "TheLoais")
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                Admin
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/Demo/ShowGrid">Sách</a>
                                <a class="dropdown-item" href="/Khachhangs/Index">Khách Hàng</a>
                                <a class="dropdown-item" href="/TacGias/Index">Tác Giả</a>
                                <a class="dropdown-item" href="/TheLoais/Index">Thể Loại</a>
                                <a class="dropdown-item" href="/NhaXuatBans/Index">Nhà Xuất Bản</a>
                                <a class="dropdown-item" href="/GioHangs/Index">Đơn Hàng Giỏ Hàng</a>
                                <a class="dropdown-item" href="/CongTyPHs/Index">Công Ty Phát Hành</a>
                            </div>
                        </li>
                    </ul>
                    <form class="form-inline my-2 my-lg-0" action="/Saches/List">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search Theo Tên Sách" name="TenSach" id="TenSach" aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                    </form>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <center> <p style="color:aqua">@Session["TenKH"] @Session["Role"]</p></center>
                        </li>
                        <li class="nav-item">
                            @if (@Session["KH"] != null)
                            {
                                <a class="nav-link" href="/KhachHangs/Logout">Logout</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container">
            @RenderBody()
        </div>

    <hr />
    
    <footer>
      <div class="row">
          <div class="col-md-4"><p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                                @*<center>
                                    Lý Quyền - 17dh110151
                                    Trần Văn Quốc Bảo - 17Dh110183
                                    Đinh Viết Đạt 17dh110192
                                    Cao Văn Thông
                                    Trần Minh Tân
                                    Phan Quốc Hùng
                                </center>*@
          </div>
          <div class="col-md-4">
              <h6>
                  Địa chỉ của trường
                  155 Sư Vạn Hạnh (nd), Phường 13, Quận 10, TP.HCM
              </h6>
          </div>
          <div class="col-md-4">
                
              <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d979.8662807995644!2d106.66735497461782!3d10.775643843092393!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752edb0c743925%3A0x429098e67e8786a7!2zS2hvYSBDw7RuZyBOZ2jhu4cgVGjDtG5nIFRpbiAtIMOQ4bqhaSBI4buNYyBOZ2_huqFpIE5n4buvIFRpbiBI4buNYyBUaMOgbmggUGjhu5EgSOG7kyBDaMOtIE1pbmg!5e0!3m2!1sen!2sus!4v1595214238713!5m2!1sen!2sus" width="300" height="250" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
          </div>
      </div>
    </footer>


    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
